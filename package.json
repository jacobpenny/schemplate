    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-storybook": "^0.6.13",
    "postcss": "^8.4.29",
    "prettier": "3.0.3",
    "sass": "^1.67.0",
    "storybook": "^7.4.2",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "pnpm": {
    "overrides": {
      "@testing-library/user-event": "14.4.3"
